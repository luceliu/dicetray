<% include partials/header %>
<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome To dicetray!</h1>
            <p>dic up ya trays</p>
            <p>
                <a class="btn btn-primary btn-large" href="/characters/new">Add new character</a>
            </p>
        </div>
    </header>

    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% characters.forEach(function(character){ %>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
                <div class="caption">
                    <p>Character: <%= character._id %></p>
                    <p><%= character %></p>
                </div>
            </div>
        </div>
        <% }); %>
    </div>
</div>

<% include partials/footer %>
