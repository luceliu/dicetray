<% include partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Create Ya Man</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/characters" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="What's ya man's name?">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="strength" placeholder="How strong ya man?">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="dexterity" placeholder="How dexterity is ya man?">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="constitution" placeholder="How hp is ya man?">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="intelligence" placeholder="How smart is ya man?">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="wisdom" placeholder="How wise is ya man?">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="charisma" placeholder="How charming is ya man?">
                </div>
                <!--<div class="form-group">-->
                    <!--<input class="form-control" type="text" name="image" placeholder="image url">-->
                <!--</div>-->
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Create That Man</button>
                </div>
            </form>
            <a href="/characters">Where's My Mans</a>
        </div>
    </div>
</div>
<% include partials/footer %>

